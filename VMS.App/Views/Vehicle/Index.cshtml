                    <div class="col-md-3 col-sm-3 col-lg-3 mb-2 bg-white">
                        <label class="control-label">Category</label>
                        <input id="CategoryModal" disabled>
                    </div>

                    <div class="col-md-3 col-sm-3 col-lg-3 mb-2 bg-white">
                        <label class="control-label">Model</label>
                        <input id="ModelModal" disabled>
                    </div>

                    <div class="col-md-3 col-sm-3 col-lg-3 mb-2 bg-white">
                        <label class="control-label">Manufacture</label>
                        <input id="ManufactureModal" disabled>
