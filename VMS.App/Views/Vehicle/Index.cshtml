                        <label class="control-label">Vehicle Type</label>
                        <input id="TypeModal" disabled>
                    </div>

                    <div class="col-md-3 col-sm-3 col-lg-3 mb-2 bg-white">
                        <label class="control-label">Vehicle Capacity</label>
                        <input id="VehicleCapacityModal" disabled>
                    </div>

                    <div class="col-md-3 col-sm-3 col-lg-3 mb-2 bg-white">
                        <label class="control-label">Vehicle Mileage</label>
                        <input id="vehicleMileageModal" disabled>
                    </div>

                    <div class="col-md-3 col-sm-3 col-lg-3 mb-2 bg-white">
                        <label class="control-label">Registration No.</label>
                        <input id="RegistrationModal" disabled>
                    </div>

                    <div class="col-md-3 col-sm-3 col-lg-3 mb-2 bg-white">
                        <label class="control-label">Registration Date</label>
                        <input id="RegistrationDateModal" disabled>
                    </div>

                    <div class="col-md-3 col-sm-3 col-lg-3 mb-2 bg-white">
                        <label class="control-label">Registration Expiry Date</label>
                        <input id="RegistrationExDate" disabled>
                    </div>

                    <div class="col-md-3 col-sm-3 col-lg-3 mb-2 bg-white">
                        <label class="control-label">Tax & Token</label>
                        <input id="TokenModal" disabled>
                    </div>

                    <div class="col-md-3 col-sm-3 col-lg-3 mb-2 bg-white">
                        <label class="control-label">Tax & Token Expiry Date</label>
                        <input id="TokenExDateModal" disabled>
                    </div>

                    <div class="col-md-3 col-sm-3 col-lg-3 mb-2 bg-white">
                        <label class="control-label">Chasis No.</label>
                        <input id="ChasissModal" disabled>
                    </div>

                    <div class="col-md-3 col-sm-3 col-lg-3 mb-2 bg-white">
                        <label class="control-label">Engine No.</label>
                        <input id="EngineModal" disabled>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="modalClose" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

